<Window x:Class="dogMeet_adminSite.Views.AdminLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dogMeet_adminSite.Views"
        mc:Ignorable="d"
        Title="Bejelentkezés az admin felületre" Height="400" Width="350"
        WindowStartupLocation="CenterScreen">
    <Grid Background="Bisque">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Content="DogMeet" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="25" FontWeight="Bold"/>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1">
            <Label Content="Email cím:"/>
            <TextBox Grid.Row="0" Grid.Column="0" Width="250" Name="adminemail" Margin="0,0,0,10"/>
            <Label Content="Jelszó:"/>
            <PasswordBox Grid.Row="0" Grid.Column="0" Width="250" Name="adminpassword" Margin="0,0,0,10"/>
            <Button Content="Bejelentkezés" Padding="3,3,3,3" Click="Login_Click"/>
        </StackPanel>
    </Grid>
</Window>
